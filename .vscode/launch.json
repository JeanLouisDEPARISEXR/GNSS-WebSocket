{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GNSS WS Server (from config/gnss.json)",
      "type": "python",
      "request": "launch",
      "module": "gnss_ws_server.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["--config", "${workspaceFolder}/config/gnss.json"]
    },
    {
      "name": "HTTP Server (index.html)",
      "type": "python",
      "request": "launch",
      "module": "http.server",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": ["8000"]
    }
  ],
  "compounds": [
    {
      "name": "Run Both: WS(JSON) + HTTP",
      "configurations": [
        "GNSS WS Server (from config/gnss.json)",
        "HTTP Server (index.html)"
      ]
    }
  ]
}
