{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GNSS WS Server (auto)",
      "type": "python",
      "request": "launch",
      "module": "gnss_ws_server.main"
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--port", "auto",
        "--baud", "115200",
        "--host", "127.0.0.1",
        "--ws-port", "8765"
      ]
    },
    {
      "name": "GNSS WS Server (multi with labels)",
      "type": "python",
      "request": "launch",
      "module": "gnss_ws_server.main"
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "--port", "COM27",
        "--port", "COM9",
        "--label", "COM27:BASE",
        "--label", "COM9:ROVER",
        "--baud", "115200",
        "--host", "127.0.0.1",
        "--ws-port", "8765"
      ]
    },
    {
      "name": "HTTP Server (index.html)",
      "type": "python",
      "request": "launch",
      "module": "http.server",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "8000"
      ]
    },
    {
      "name": "Run Both: WS + HTTP",
      "type": "compound",
      "configurations": [
        "GNSS WS Server (multi with labels)",
        "HTTP Server (index.html)"
      ]
    }
  ]
}
