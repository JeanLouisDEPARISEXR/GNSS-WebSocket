{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GNSS WS Server (auto)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/gnss_ws_server.py",
      "console": "integratedTerminal",
      "args": [
        "--port", "auto",
        "--baud", "115200",
        "--host", "127.0.0.1",
        "--ws-port", "8765"
      ]
    },
    {
      "name": "GNSS WS Server (multi receivers)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/gnss_ws_server.py",
      "console": "integratedTerminal",
      "args": [
        "--port", "COM27",
        "--port", "COM9",
        "--baud", "115200",
        "--host", "127.0.0.1",
        "--ws-port", "8765"
      ]
    },
    {
      "name": "HTTP Server (index.html)",
      "type": "python",
      "request": "launch",
      "module": "http.server",
      "console": "integratedTerminal",
      "args": [
        "8000"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
